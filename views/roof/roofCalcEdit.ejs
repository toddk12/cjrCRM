<%- include('../includes/header.ejs') %>
    <link rel="stylesheet" href="/css/projects.css">

    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
            <main class="small">
                <div class="centered">
                    <h1><strong>Roof Calculator Information</strong></h1>
                    <h4>
                        <div class="row">
                            <div class="col-sm">
                                <%= project.projectNo %>
                            </div>
                            <div class="col-sm">
                                Owner:
                                <%= project.owner1Fn %>
                                    <%= project.owner1Ln %>
                            </div>
                            <div class="col-sm">
                                Address:
                                <%= project.address %>
                            </div>
                            <div class="col-sm">
                                City:
                                <%= project.city %>
                            </div>
                        </div>
                    </h4>
                </div>
                <div class="centered">
                    <a class="btn-sm text-center" style="width: 150px" href="/project/<%= project.id %>">Back to Details</a>
                </div>
                <br>
                <form class="form" action="/roofCalcEdit" method="POST">
                    <div class="centered">
                        <article class="shingles">
                            <div class="row">
                                <div class="col-sm text-center">
                                    <input type="hidden" name="projectId" id="projectId" value="<%= project.id %>">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm text-center">
                                    <h5><strong>Please enter the Shingle Material Information:</strong></h5>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm text-center">
                                    <input type="hidden" name="roofId" id="roofId" value="<%= roof.id %>">
                                </div>
                                <div class="col-sm text-right">
                                    <label for="sMaterial"><strong>Shingle Material: </strong></label>
                                    <input type="text" name="sMaterial" id="sMaterial" value="<%= roof.sMaterial %>">
                                </div>
                                <div class="col-sm text-right">
                                    <label for="sManufacturer"><strong>Shingle Manufacturer: </strong></label>
                                    <input type="text" name="sManufacturer" id="sManufacturer" value="<%= roof.sManufacturer %>">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm text-right">
                                    <label for="sName"><strong>Shingle Name: </strong></label>
                                    <input type="text" name="sName" id="sName" value="<%= roof.sName %>">
                                </div>
                                <div class="col-sm text-right">
                                    <label for="sColor"><strong>Shingle Color: </strong></label>
                                    <input type="text" name="sColor" id="sColor" value="<%= roof.sColor %>">
                                </div>
                            </div>
                        </article>
                        <article class="dimensions">
                            <div class="row">
                                <div class="col-sm text-center">
                                    <h5><strong>Please enter the following Dimensions:</strong></h5>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm text-right">
                                    <label for="ridge"><strong>Ridge: </strong></label>
                                    <input style="width: 100px" type="number" name="ridge" id="ridge" value="<%= roof.ridge %>">
                                </div>
                                <div class="col-sm text-right">
                                    <label for="hip"><strong>Hip: </strong></label>
                                    <input style="width: 100px" type="number" name="hip" id="hip" value="<%= roof.hip %>">
                                </div>
                                <div class="col-sm text-right">
                                    <label for="valley"><strong>Valley: </strong></label>
                                    <input style="width: 100px" type="number" name="valley" id="valley" value="<%= roof.valley %>">
                                </div>
                                <div class="col-sm text-right">
                                    <label for="rake"><strong>Rake: </strong></label>
                                    <input style="width: 100px" type="number" name="rake" id="rake" value="<%= roof.rake %>">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm text-right">
                                    <label for="noIWCourses"><strong># of Ice/Water Courses: </strong></label>
                                    <select style="width: 75px" class="select" name="noIWCourses" id="noIWCourses" value="<%= roof.noIWCourses %>">
                                <option>0</option>
                                <option>1</option>
                                <option>2</option>
                            </select>
                                </div>
                                <div class="col-sm text-right">
                                    <label for="eaveStarter"><strong>Eaves/Starter: </strong></label>
                                    <input style="width: 100px" type="number" name="eaveStarter" id="eaveStarter" value="<%= roof.eaveStarter %>">
                                </div>
                                <div class="col-sm text-right">
                                    <label for="flashing"><strong>Flashing: </strong></label>
                                    <input style="width: 100px" type="number" name="flashing" id="flashing" value="<%= roof.flashing %>">
                                </div>
                                <div class="col-sm text-right">
                                    <label for="stepFlashing"><strong>Step Flashing: </strong></label>
                                    <input style="width: 100px" type="number" name="stepFlashing" id="stepFlashing" value="<%= roof.stepFlashing %>">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm text-right">
                                    <label for="totalArea"><strong>Total Area: </strong></label>
                                    <input style="width: 100px" type="number" name="totalArea" id="totalArea" value="<%= roof.totalArea %>">
                                </div>
                                <div class="col-sm text-right">
                                    <label for="squares"><strong>Squares: </strong></label>
                                    <input style="width: 100px" type="number" name="squares" id="squares" value="<%= roof.squares %>">
                                </div>
                                <div class="col-sm text-right">
                                    <label for="feltWgt"><strong>Felt Weight: </strong></label>
                                    <select style="width: 75px" class="select" name="feltWgt" id="feltWgt" value="<%= roof.sMaterial %>" feltWgt>
                                <option>15 lbs</option>
                                <option>30 lbs</option>
                            </select>
                                </div>
                                <div class="col-sm text-right">
                                    <label for="needDeck"><strong>Need Decking? </strong></label>
                                    <select style="width: 75px" class="select" name="needDeck" id="needDeck" value="<%= roof.needDeck %>">
                                <option>No</option>
                                <option>Yes</option>
                            </select>
                                </div>
                            </div>
                        </article>
                    </div>
                    <div class="centered">
                        <article class="amounts">
                            <div class="row">
                                <div class="col-sm text-center">
                                    <h5><strong>Please enter the following Information:</strong></h5>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm text-right">
                                    <label for="rollValley"><strong>Roll Valley (rolls): </strong></label>
                                    <input style="width: 100px" type="number" name="rollValley" id="rollValley" value="<%= roof.rollValley %>">
                                </div>
                                <div class="col-sm text-right">
                                    <label for="turtleVents"><strong>Turtle Vents: </strong></label>
                                    <input style="width: 100px" type="number" name="turtleVents" id="turtleVents" value="<%= roof.turtleVents %>">
                                </div>
                                <div class="col-sm text-right">
                                    <label for="adjPipeVents"><strong>Adj Pipe Vents: </strong></label>
                                    <input style="width: 100px" type="number" name="adjPipeVents" id="adjPipeVents" value="<%= roof.adjPipeVents %>">
                                </div>
                                <div class="col-sm text-right">
                                    <label for="caulk"><strong>Caulk (Clear Silicon): </strong></label>
                                    <input style="width: 100px" type="number" name="caulk" id="caulk" value="<%= roof.caulk %>">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm text-right">
                                    <label for="sprayPaint"><strong>Spray Paint: </strong></label>
                                    <input style="width: 100px" type="number" name="sprayPaint" id="sprayPaint" value="<%= roof.sprayPaint %>">
                                </div>
                                <div class="col-sm text-right">
                                    <label for="sprayPrimer"><strong>Spray Primer: </strong></label>
                                    <input style="width: 100px" type="number" name="sprayPrimer" id="sprayPrimer" value="<%= roof.sprayPrimer %>">
                                </div>
                                <div class="col-sm text-right">
                                    <label for="tinShingles"><strong>Tin Shingles: </strong></label>
                                    <input style="width: 100px" type="number" name="tinShingles" id="tinShingles" value="<%= roof.tinShingles %>">
                                </div>
                                <div class="col-sm text-right">
                                    <label for="modBase"><strong>Modified Base: </strong></label>
                                    <input style="width: 100px" type="number" name="modBase" id="modBase" value="<%= roof.modBase %>">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm text-right">
                                    <label for="rollRoof"><strong>Roll Roofing: </strong></label>
                                    <input style="width: 100px" type="number" name="rollRoof" id="rollRoof" value="<%= roof.rollRoof %>">
                                </div>
                                <div class="col-sm text-right">
                                    <label for="dripColor"><strong>Drip Edge Color: </strong></label>
                                    <select style="width: 100px" class="select" name="dripColor" id="dripColor" value="<%= roof.dripColor %>">
                                <option>N/A</option>
                                <option>White</option>
                                <option>Brown</option>
                                <option>Black</option>
                                <option>Bronze</option>
                                <option>Grey</option>
                                <option>Tan</option>
                                <option>Almond</option>
                                <option>Mill</option>
                            </select>
                                </div>
                                <div class="col-sm text-right">
                                    <label for="dripSize"><strong>Drip Edge Size: </strong></label>
                                    <select style="width: 100px" class="select" name="dripSize" id="dripSize" value="<%= roof.dripSize %>">
                                <option>2 x 2</option>
                                <option>1.5 x 1.5</option>
                            </select>
                                </div>
                                <div class="col-sm text-right">
                                    <label for="turtleColor"><strong>Turtle Vent Color: </strong></label>
                                    <select style="width: 100px" class="select" name="turtleColor" id="turtleColor" value="<%= roof.turtleColor %>">
                                <option>N/A</option>
                                <option>Black</option>
                                <option>Brown</option>
                                <option>Weathered Bronze</option>
                            </select>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm text-right">
                                    <label for="versaCaps"><strong>Versa Caps: </strong></label>
                                    <input style="width: 100px" type="number" name="versaCaps" id="versaCaps" value="<%= roof.versaCaps %>">
                                </div>
                                <div class="col-sm text-right">
                                    <label for="vcSize"><strong>Versa Cap Size: </strong></label>
                                    <select style="width: 100px" class="select" name="vcSize" id="vcSize" value="<%= roof.vcSize %>">
                                <option>0</option>
                                <option>4</option>
                                <option>5</option>
                                <option>6</option>
                                <option>8</option>
                            </select>
                                </div>
                                <div class="col-sm text-right">
                                    <label for="bVent"><strong>B Vents: </strong></label>
                                    <input style="width: 100px" type="number" name="bVent" id="bVent" value="<%= roof.bVent %>">
                                </div>
                                <div class="col-sm text-right">
                                    <label for="bvSize"><strong>B Vent Size: </strong></label>
                                    <select style="width: 100px" class="select" name="bvSize" id="bvSize" value="<%= roof.bSize %>">
                                <option>0</option>
                                <option>4</option>
                                <option>5</option>
                                <option>6</option>
                                <option>8</option>
                            </select>
                                </div>
                            </div>
                        </article>
                    </div>
                    <div class="centered">
                        <article class="others">
                            <div class="row">
                                <div class="col-sm text-center">
                                    <h5><strong>Please enter any Other items:</strong></h5>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xsm">
                                    <label for="other1"><strong>Qty Other 1: </strong></label>
                                    <input style="width: 75px" type="number" name="other1" id="other1" value="<%= roof.other1 %>">
                                </div>
                                <div class="col-xsm">
                                    <label for="unit1"><strong>Units: </strong></label>
                                    <input style="width: 75px" type="text" name="unit1" id="unit1" value="<%= roof.unit1 %>">
                                </div>
                                <div class="col-xsm">
                                    <label for="desc1"><strong>Description: </strong></label>
                                    <input style="width: 350px" type="text" name="desc1" id="desc1" value="<%= roof.desc1 %>">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xsm">
                                    <label for="other2"><strong>Qty Other 2: </strong></label>
                                    <input style="width: 75px" type="number" name="other2" id="other2" value="<%= roof.other2 %>">
                                </div>
                                <div class="col-xsm">
                                    <label for="unit2"><strong>Units: </strong></label>
                                    <input style="width: 75px" type="text" name="unit2" id="unit2" value="<%= roof.unit2 %>">
                                </div>
                                <div class="col-xsm">
                                    <label for="desc2"><strong>Description: </strong></label>
                                    <input style="width: 350px" type="text" name="desc2" id="desc2" value="<%= roof.desc2 %>">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xsm">
                                    <label for="other3"><strong>Qty Other 3: </strong></label>
                                    <input style="width: 75px" type="number" name="other3" id="other3" value="<%= roof.other3 %>">
                                </div>
                                <div class="col-xsm">
                                    <label for="unit3"><strong>Units: </strong></label>
                                    <input style="width: 75px" type="text" name="unit3" id="unit3" value="<%= roof.unit3 %>">
                                </div>
                                <div class="col-xsm">
                                    <label for="desc3"><strong>Description: </strong></label>
                                    <input style="width: 350px" type="text" name="desc3" id="desc3" value="<%= roof.desc3 %>">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xsm">
                                    <label for="other4"><strong>Qty Other 4: </strong></label>
                                    <input style="width: 75px" type="number" name="other4" id="other4" value="<%= roof.other4 %>">
                                </div>
                                <div class="col-xsm">
                                    <label for="unit4"><strong>Units: </strong></label>
                                    <input style="width: 75px" type="text" name="unit4" id="unit4" value="<%= roof.unit4 %>">
                                </div>
                                <div class="col-xsm">
                                    <label for="desc4"><strong>Description: </strong></label>
                                    <input style="width: 350px" type="text" name="desc4" id="desc4" value="<%= roof.desc4 %>">
                                </div>
                            </div>
                        </article>
                    </div>
                    <div class="centered">
                        <article class="info">
                            <div class="row">
                                <div class="col-sm text-center">
                                    <h5><strong>Please enter the following order information:</strong></h5>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm">
                                    <label for="supplier"><strong>Supplier: </strong></label>
                                    <input type="text" name="supplier" id="supplier" value="<%= roof.supplier %>">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm" style="vertical-align: top">
                                    <label style="vertical-align: top" for="orderNotes"><strong>Order Notes: </strong></label>
                                    <textarea cols="153" rows="3" type="text" name="orderNotes" id="orderNotes" value="<%= roof.orderNotes %>"></textarea>
                                </div>
                            </div>
                        </article>
                    </div>
                    <div class="centered">
                        <br>
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <button class="btn-sm text-center" style="width: 125px" type="submit">Re-calculate</button>
                    </div>
                </form>
                <br>
            </main>

            <%- include('../includes/footer.ejs') %>