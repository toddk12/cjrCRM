<%- include('../includes/header.ejs') %>
    <link rel="stylesheet" href="/css/info.css">

    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
            <main><br><br><br>
                <div class="centered">
                    <br>
                    <h1>Add Supervisor</h1>
                    <br>
                </div>
                <article class="ownerinfo">
                    <form class="form" action="/add-supervisor" method="POST">
                        <div class="row">
                            <div class="col-sm">
                                <label for="name"><strong>Supervisor Name:</strong></label>
                                <input style="width: 500px" type="text" name="name" id="name" value="<%= supervisor.name %>">
                            </div>
                        </div>
                        <br>
                        <div class="row">
                            <div class="col-sm">
                                <label for="active"><strong>Active?</strong></label>
                                <input class="form-check-input" style="width: 100px" type="checkbox" name="active" id="active" value="<%= supervisor.active %>">
                            </div>
                        </div>
                        <br>
                        <div class="centered">
                            <br>
                            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                            <button class="updatebtn" type="submit">Add Supervisor</button>
                        </div>
                    </form>
                </article>
            </main>

            <%- include('../includes/footer.ejs') %>