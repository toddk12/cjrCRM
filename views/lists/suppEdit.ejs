<%- include('../includes/header.ejs') %>
    <link rel="stylesheet" href="/css/info.css">

    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
            <main>
                <div class="centered">
                    <br>
                    <h1>Edit Supplier</h1>
                    <br>
                </div>
                <article class="ownerinfo">
                    <form class="form" action="/suppEdit" method="POST">
                        <div class="row">
                            <div class="col-sm">
                                <input type="hidden" name="suppId" id="suppId" value="<%= supps.id %>">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm">
                                <label for="coName"><strong>Company Name:</strong></label>
                                <input style="width: 500px" type="text" name="coName" id="coName" value="<%= supps.coName %>">
                            </div>
                        </div>
                        <br>
                        <div class="row">
                            <div class="col-sm">
                                <label for="contact"><strong>Contact:</strong></label>
                                <input style="width: 500px" type="text" name="contact" id="contact" value="<%= supps.contact %>">
                            </div>
                        </div>
                        <br>
                        <div class="row">
                            <div class="col-sm">
                                <label for="address"><strong>Address:</strong></label>
                                <input style="width: 500px" type="text" name="address" id="address" value="<%= supps.address %>">
                            </div>
                        </div>
                        <br>
                        <div class="row">
                            <div class="col-sm">
                                <label for="address2"><strong>Address 2:</strong></label>
                                <input style="width: 500px" type="text" name="address2" id="address2" value="<%= supps.address2 %>">
                            </div>
                        </div>
                        <br>
                        <div class="row">
                            <div class="col-sm">
                                <label for="city"><strong>City: </strong></label>
                                <input type="text" text="city" id="city" value="<%= supps.city %>">
                            </div>
                            <div class="col-sm">
                                <label for="state"><strong>State: </strong></label>
                                <input type="text" text="state" id="state" value="<%= supps.state %>">
                            </div>
                            <div class="col-sm">
                                <label for="zip"><strong>Zip: </strong></label>
                                <input type="text" text="zip" id="zip" value="<%= supps.zip %>">
                            </div>
                        </div>
                        <br>
                        <div class="row">
                            <div class="col-sm">
                                <label for="phone"><strong>Phone: </strong></label>
                                <input type="text" name="phone" id="phone" value="<%= supps.phone %>">
                            </div>
                            <div class="col-sm">
                                <label for="email"><strong>Email: </strong></label>
                                <input style="width: 400px" type="text" name="email" id="email" value="<%= supps.email %>">
                            </div>
                        </div>
                        <br>
                        <div class="row">
                            <div class="col-sm">
                                <label for="notes"><strong>Notes:</strong></label>
                                <input style="width: 800px" type="text" name="notes" id="notes" value="<%= supps.notes %>">
                            </div>
                        </div>
                        <br>
                        <div class="centered">
                            <br>
                            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                            <button class="updatebtn" type="submit">Save</button>
                        </div>
                    </form>
                </article>
            </main>

            <%- include('../includes/footer.ejs') %>