                <%- include('../includes/navigation.ejs') %>
                    <main>
                        <div class="centered"><br><br><br>
                            <h1><strong>List of Sales Representatives</strong></h1>
                            <br>
                            <article>
                                <h3>Active Sales Representatives</h3>
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th scope="col"><strong>Name</strong></th>
                                            <th scope="col"><strong>Email</strong></th>
                                            <th scope="col"><strong></strong></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% for (let asale of asals) { %>
                                            <tr>
                                                <th scope="row">
                                                    <%= asale.name %>
                                                </th>
                                                <td>
                                                    <%= asale.email %>
                                                </td>
                                                <td>
                                                    <a class="btn-esm text-center" style="width: 150px" href="/salEdit/<%= asale.id %>">Edit</a>
                                                </td>
                                            </tr>
                                            <% } %>
                                    </tbody>
                                </table>
                            </article>
                            <article>
                                <h3>Inactive Sales Representatives</h3>
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th scope="col"><strong>Name</strong></th>
                                            <th scope="col"><strong>Email</strong></th>
                                            <th scope="col"><strong></strong></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% for (let sale of sals) { %>
                                            <tr>
                                                <th scope="row">
                                                    <%= sale.name %>
                                                </th>
                                                <td>
                                                    <%= sale.email %>
                                                </td>
                                                <td>
                                                    <a class="btn-esm text-center" style="width: 150px" href="/salEdit/<%= sale.id %>">Edit</a>
                                                </td>
                                            </tr>
                                            <% } %>
                                    </tbody>
                                </table>
                            </article>
                        </div>


                    </main>

